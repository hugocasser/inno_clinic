<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Entry" x:Key="EditableEntry">
        <Setter Property="FontFamily" Value="JetBrainsMono"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="TextColor" Value="DarkBlue"></Setter>
        <Setter Property="Margin" Value="0,15,0,0"></Setter>
        <Setter Property="MaximumHeightRequest" Value="44"></Setter>
        <Setter Property="MinimumHeightRequest" Value="44"></Setter>
        <Setter Property="HorizontalOptions" Value="End"></Setter>
        <Setter Property="MaximumWidthRequest" Value="250"></Setter>
        <Setter Property="MinimumWidthRequest" Value="250"></Setter>
        <Setter Property="HorizontalTextAlignment" Value="Start"></Setter>
        <Setter Property="VerticalTextAlignment" Value="Center"></Setter>
        <Setter Property="ClearButtonVisibility" Value="WhileEditing"></Setter>
    </Style>
</ResourceDictionary>