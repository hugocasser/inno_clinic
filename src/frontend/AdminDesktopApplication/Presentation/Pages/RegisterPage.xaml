<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:auth="clr-namespace:Presentation.Components.Auth"
             xmlns:resources="clr-namespace:Presentation.Resources"
             x:Class="Presentation.Pages.RegisterPage" Title="Register" Shell.NavBarIsVisible="false">
        <ContentPage.Content>
            <VerticalStackLayout Background="Beige">
                <auth:EmailInput/>
                <auth:ConfirmPassword/>
                <Button Style="{StaticResource AuthApplyButton}" Text ="{x:Static resources:Language.Register}"
                        MaximumHeightRequest="100"
                        MinimumHeightRequest="20"
                        VerticalOptions="Center"
                        MaximumWidthRequest="300"
                        MinimumWidthRequest="70" Margin="0, 80, 0, 20"></Button>
                <Button Style ="{StaticResource  AuthRedirectButton}" VerticalOptions= "End" MaximumHeightRequest="100"
                        MinimumHeightRequest="20"
                        MaximumWidthRequest="300"
                        Margin="0, 50, 0, 20"
                        MinimumWidthRequest="70" Text="{x:Static resources:Language.GoToLogin}" Clicked="LoginRedirectButton_OnClicked"></Button>
            </VerticalStackLayout>
        </ContentPage.Content>
</ContentPage>